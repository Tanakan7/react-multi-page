{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs", // VSCでJSXの定義にジャンプするのに必要
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@img/*": ["src/img/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@components/*": ["src/components/*"],
      "@common/*": ["src/common/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
